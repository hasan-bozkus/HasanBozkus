
@{
    ViewData["Title"] = "EmailPost";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section script{
    <link href="~/ckeditor/plugins/codesnippet/lib/highlight/styles/monokai.css" rel="stylesheet" />
    <link href="~/ckeditor/plugins/codesnippet/lib/highlight/styles/monokai_sublime.css" rel="stylesheet" />
    <script src="~/ckeditor/plugins/codesnippet/lib/highlight/highlight.pack.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("editorid", {
            extraPlugins: 'codesnippet, youtube, video',
            youtube_responsive : true,
            youtube_disabled_fields : ['chkResponsive'],
            codesnippet_theme: 'monokai_sublime',
            customConfig: "~/ckeditor/config.js"
        });
        hljs.initHiglightingOnLoad();
    </script>
}
<form method="post">
    <div class="form-group">
        <label>Başlık</label>
        <input type="text" name="Subject" class="form-control" />
    </div>
    <br />
    
    <br />
    <div class="form-group">
        <label>E-Posta İçeriği</label>
    <textarea name="Descricption" id="editorid" class="form-control" rows="15" cols="142"></textarea>
    </div>
    <br />
    <button type="submit" class="btn btn-primary" onclick="alret('Toplu E-posta Gönderildi.')">Gönder</button>
</form>

