@using EntityLayer.Concrete
@model List<Catch>

@{
    ViewData["Title"] = "CathReadAllKamu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kamuya açık tüm sohbetler</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                
                                <th> Konu Başlığı </th>
                                <th> Konu Açıklaması</th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.CatchTitle
                                    </td>
                                    <td>@item.sohbetaciklamasi</td>
                                    <td>
                                        <label class="badge badge-gradient-success">@item.Category.CategorName</label>
                                    </td>
                                    <td>@(((DateTime)item.CatchDate).ToString("dd-MMM-yyyy"))</td>
                                    <td>
                                        <a href="/Admin/Widget/AdminSohbet/@item.CatchId" id="btnGrubaKatıl" name="@ViewBag.groupnames" class="btn btn-dark">Katıl</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>