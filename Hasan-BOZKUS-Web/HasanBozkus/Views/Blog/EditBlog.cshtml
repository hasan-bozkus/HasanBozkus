    <link href="~/ckeditor/plugins/codesnippet/lib/highlight/styles/monokai.css" rel="stylesheet" />
    <link href="~/ckeditor/plugins/codesnippet/lib/highlight/styles/monokai_sublime.css" rel="stylesheet" />
    <script src="~/ckeditor/plugins/codesnippet/lib/highlight/highlight.pack.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("editorid", {
            extraPlugins: 'codesnippet, youtube, video',
            codesnippet_theme:'monokai_sublime',
            youtube_responsive: true,
            youtube_disabled_fields: ['chkResponsive'],
            customConfig: "~/ckeditor/config.js"
        });
        hljs.initHighlightingOnLoad();
    </script>
}

<style>
    pre {
        background: #272822;
    }

        pre::-webkit-scrollbar {
            height: 8px;
            width: 10px;
            background-color: #eaeaea;
            border-left: 1px solid #f1f1f1;
        }

        pre::-webkit-scrollbar-thumb {
            background-color: #a0a0a0;
            border-radius: 15px;
        }

            pre::-webkit-scrollbar-thumb:hover {
                background-color: #7d7d7d;
            }
</style>

<h1>Blog Düzenleme sayfası</h1>
<form asp-action="EditBlog" asp-controller="Blog" method="post">
    @Html.Label("Blog ID")
    @Html.TextBoxFor(x => x.BlogId, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Thumbnail Url")
    @Html.TextBoxFor(x => x.BlogThumbnailImage, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Görseli")
    @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Kategori")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" })
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x => x.BlogContent, 10, 3, new { @class="form-control", @id="editorid"})
    <br />
    @Html.Label("Durum")
    @Html.DropDownListFor(x => x.BlogStatus, (List<SelectListItem>)ViewBag.list, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Kaydet</button> 
</form>

