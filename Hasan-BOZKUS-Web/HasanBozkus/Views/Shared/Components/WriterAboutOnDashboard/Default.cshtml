@model EntityLayer.Concrete.AppUser

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Hakkında</h4>
                <h1>Hoşgeldin @ViewBag.veri</h1>
                <div class="d-flex mt-5 align-items-top">

                    <img src="~/WriterImageFiles/@ViewBag.veri2" class="rounded-circle" style="width:150px;" alt="image">
                        <div class="mb-0 flex-grow">
                            <h5 class="mr-2 mb-2">@Model.UserName - @Model.Email</h5>
                            <p class="mb-0 font-weight-light">@Model.UserAbout</p>
                        </div>
                        <div class="ml-auto">
                            <i class="mdi mdi-heart-outline text-muted"></i>
                        </div>

                </div>
            </div>
        </div>
    </div>
</div>
