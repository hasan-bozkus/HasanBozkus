@using EntityLayer.Concrete
@model Tuple<Message2, AppUser>

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


@section script{
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("editorid");
    </script>
}

<h1>Yeni Mesaj Girişi</h1>
@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{ 
    @Html.Label("Alıcı")
    @*@Html.TextBoxFor(x => x.Rec, new { @class = "form-control" })*@
     <input type="text" name="Item2.Email" class="form-control" />
    <br />
    @Html.Label("Konu")
     <input type="text" name="Item1.Subject" class="form-control" />
    <br />
    @Html.Label("Mesaj İçeriği")
    <textarea class="form-control" id="editorid" rows="15" cols="3" name="Item1.MessageDetails"></textarea>
    <br />
    <br />
<button class="btn btn-info">Gönder</button>
}

